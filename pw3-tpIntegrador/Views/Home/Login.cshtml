
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<form action="/Home/Login" method="post">
    @*
        De manera temporal se usan los inputs comunes. Cuando integremos la parte de validaciones hay que migrar a estos helpers
        @Html.EditorFor(o => o.UserName)
        @Html.ValidationMessageFor(o => o.UserName)
    *@

    <div class="form-group">
        @Html.Label("UserName", "Usuario:")
        @Html.TextBox("UserName", null, new { @class = "form-control" })
    </div>
    
    <div class="form-group">
        @Html.Label("Password", "Contraseña:")
        @Html.Password("Password", null, new { @class = "form-control" })
    </div>

    <input type="submit" class="btn btn-primary" value="Ingresar" />

</form>
