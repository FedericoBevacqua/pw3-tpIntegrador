
@{
    ViewBag.Title = "Inicio";
    ViewBag.ImgUrl = "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcR0a3QyGyINLq1pkAfLB8F3oJDfaP0vg3lg_lCcjMeVNCZTMwbs&s";
}

<h2>Ayudando al prójimo</h2>
<hr />


<h3>Acceder al sistema</h3>
<div class="card-columns home-login-cards">
    <div class="card">
        <div class="card-header"><h5 class="card-title">Iniciar sesión</h5></div>
        <div class="card-body">
            <p class="card-text">Accedé al sistema para poder utilizar todas sus funcionalidades.</p>
            @Html.ActionLink("Login", "Login", "Home", new object { }, new { @class = "pull-right btn btn-primary" })
        </div>
    </div>

    <div class="card">
        <div class="card-header"><h5 class="card-title">Registrarse</h5></div>
        <div class="card-body">
            <p class="card-text">Creá tu cuenta en pocos minutos.</p>
            @Html.ActionLink("Registro", "Registro", "Home", new object { }, new { @class = "pull-right btn btn-primary" })
        </div>
    </div>
</div>

<hr />

<h3>Propuestas más populares</h3>
<div class="card-columns">
    @for (int i = 0; i < 5; i++)
    {
    <div class="card">
        <img src="@ViewBag.ImgUrl" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">Card title</h5>
            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
            <a href="#" class="btn btn-primary">Go somewhere</a>
        </div>
        <div class="card-footer">
            <div>Puntuación: 8.2</div>
            <div class="text-muted">Creada por <span class="font-weight-bold">juan.perez</span> el 10/10/2019</div>
        </div>
    </div>
    }
</div>
