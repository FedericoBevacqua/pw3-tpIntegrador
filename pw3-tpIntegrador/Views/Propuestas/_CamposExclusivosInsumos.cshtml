<div id="campos-exclusivos-2" class="d-none">

    <div id="contenedor-insumos">
        <div class="form-row insumo">
			<div class="form-group col-md-2">
				@Html.Label("Cantidad[0]", "Cantidad:")
				@Html.EditorFor(pi => pi.Cantidad, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(pi => pi.Cantidad, null, new { @class = "text-danger" })
			</div>
			<div class="form-group col-md-4">
				@Html.Label("Nombre[0]", "Nombre insumo:")
				@Html.EditorFor(pi => pi.Nombre, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(pi => pi.Nombre, null, new { @class = "text-danger" })
			</div>
        </div>
    </div>


    <button type="button" class="btn btn-primary mb-4" onclick="agregarInsumo()">Agregar insumo</button>
    <button type="button" id="boton-quitar-insumo" class="btn btn-danger mb-4" onclick="quitarInsumo()" disabled>Quitar insumo</button>


</div>
