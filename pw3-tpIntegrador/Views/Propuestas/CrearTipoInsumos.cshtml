@model Data.Propuesta

@{
    ViewBag.Title = "Crear propuesta";
}

<h2>Crear propuesta</h2>

<form action="/Propuestas/ProcesarTipoInsumos" method="post" onsubmit="return validarCamposTipoInsumos(event);">

    <input type="hidden" name="Nombre" value="@Model.Nombre" />
    <input type="hidden" name="Descripcion" value="@Model.Descripcion" />
    <input type="hidden" name="FechaFin" value="@Model.FechaFin" />
    <input type="hidden" name="TelefonoContacto" value="@Model.TelefonoContacto" />
    <input type="hidden" name="TipoDonacion" value="@Model.TipoDonacion" />
    <input type="hidden" name="Foto" value="@Model.Foto" />
    <input type="hidden" name="Referencia1Nombre" value="@ViewBag.Referencia1Nombre" />
    <input type="hidden" name="Referencia1Telefono" value="@ViewBag.Referencia1Telefono" />
    <input type="hidden" name="Referencia2Nombre" value="@ViewBag.Referencia2Nombre" />
    <input type="hidden" name="Referencia2Telefono" value="@ViewBag.Referencia2Telefono" />

    <div id="contenedor-insumos">
        <div class="form-row insumo">
            <div class="form-group col-md-3">
                @Html.Label("Cantidad[0]", "Cantidad:")
                @Html.TextBox("Cantidad[0]", 1, new { @class = "form-control", @type = "number", @min = "1" })
            </div>
            <div class="form-group col-md-9">
                @Html.Label("Nombres[0]", "Nombre insumo:")
                @Html.TextBox("Nombres[0]", null, new { @class = "form-control", @required = "required", @maxlength = 50 })
            </div>
        </div>

        <input type="hidden" name="CantidadInsumos" id="input-cantidad-insumos" value="1" />
    </div>


    <button type="button" class="btn btn-primary mb-4" onclick="agregarInsumo()">Agregar insumo</button>
    <button type="button" id="boton-quitar-insumo" class="btn btn-danger mb-4" onclick="quitarInsumo()" disabled>Quitar insumo</button>
    <input class="btn btn-primary d-block mt-3" type="submit" value="Crear propuesta" />
</form>