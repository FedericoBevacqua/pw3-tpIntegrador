@model Data.PropuestasDonacionesMonetaria
@{
    ViewBag.Title = "Crear propuesta";
}

    <h2>Crear propuesta</h2>

<form action="/Propuestas/ProcesarTipoMonetaria" method="post" class="text-center border border-light p-5 align-items-center col col-md-6 offset-md-3">

    <p class="h4 mb-4">Propuesta Monetaria</p>

    <input type="hidden" name="Nombre" value="@Model.Nombre" />
    <input type="hidden" name="Descripcion" value="@Model.Descripcion" />
    <input type="hidden" name="FechaFin" value="@Model.FechaFin" />
    <input type="hidden" name="TelefonoContacto" value="@Model.TelefonoContacto" />
    <input type="hidden" name="TipoDonacion" value="@Model.TipoDonacion" />
    <input type="hidden" name="Foto" value="@Model.Foto" />
    <input type="hidden" name="Referencia1Nombre" value="@ViewBag.Referencia1Nombre" />
    <input type="hidden" name="Referencia1Telefono" value="@ViewBag.Referencia1Telefono" />
    <input type="hidden" name="Referencia2Nombre" value="@ViewBag.Referencia2Nombre" />
    <input type="hidden" name="Referencia2Telefono" value="@ViewBag.Referencia2Telefono" />

    <div class="form-group">
        @Html.Label("Dinero", "Cantidad de dinero necesaria (ARS $):")
        @Html.EditorFor(pm => pm.Dinero, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(pm => pm.Dinero, null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.Label("CBU", "CBU/Alias de la cuenta donde se recibirá el dinero:")
        @Html.EditorFor(pm => pm.CBU, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(pm => pm.CBU, null, new { @class = "text-danger" })
    </div>

    <input type="submit" value="Crear propuesta" class="btn btn-primary btn-block my-4" />
</form>

