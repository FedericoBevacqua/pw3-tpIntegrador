
@{
	ViewBag.Title = "Mis donaciones";
	ViewBag.Img = "https://www.loottis.com/wp-content/uploads/2014/10/default-img.gif";
	Layout = "~/Views/Shared/_PropuestasLayout.cshtml";
}

    <div class="container">
        <h2>Mis donaciones</h2>
        <div class="card-columns">
            @for (int i = 0; i < 5; i++)
            {
                <div class="card">
                    <img src="@ViewBag.Img" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">Pinta mi cerca</h5>
                        <div class="card-subtitle mb-2 text-muted">Donación monetaria</div>
                        <div class="card-text">Donaste <span class="font-weight-bold">$250</span> el 15/10/2019</div>
                        <div class="card-text">Total recaudado: $2.500 de $10.000</div>
                        <a href="#" class="btn btn-primary mt-4">Ver publicación</a>
                    </div>
                    <div class="card-footer">
                        <div>Publicación abierta</div>
                    </div>
                </div>
            }
        </div>
    </div>

