@model Data.Usuario
@{
	Layout = "~/Views/Shared/_AnonimoLayout.cshtml";
}

<form class="border border-light p-5 align-items-center col col-md-6 offset-md-3" action="/Usuario/Registro" method="post">

    <p class="h4 mb-4">Registro</p>

    <div class="form-group">
        <label for="exampleInputEmail1">E-mail</label>
        <input type="email" class="form-control" name="Email" placeholder="E-mail">
    </div>

    <div class="form-group">
        <label for="exampleInputPassword1">Contraseña</label>
        <input type="password" class="form-control" name="Password" placeholder="Contraseña">
    </div>

    @*TODO: Arreglar que valide el PasswordConfirm*@
    <div class="form-group">
        <label for="exampleInputPassword1">Repetir Contraseña</label>
        <input type="password" class="form-control" name="PasswordConfirm" placeholder="Repetir Contraseña">
    </div>

    <div class="form-group">
        <label for="exampleInputPassword1">Fecha de nacimiento</label>
        <input type="date" class="form-control" name="FechaNacimiento" placeholder="Fecha de nacimiento">
    </div>

    <button class="btn btn-primary btn-block my-4" type="submit">Registrarse</button>

    <p>
        ¿Ya tienes una cuenta?
        <a href="/Usuario/Login">Iniciar Sesión</a>
    </p>

    @if (ViewData["MensajeErrorEmail"] != null)
    {
        <br />
        <div class="alert alert-danger centermsg" role="alert">
            @ViewData["MensajeErrorEmail"]
        </div>
    }

</form>
