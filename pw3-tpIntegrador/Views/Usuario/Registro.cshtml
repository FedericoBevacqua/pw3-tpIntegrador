@model Data.UsuarioRegistro
@{
	Layout = "~/Views/Shared/_AnonimoLayout.cshtml";
}

<form class="text-center border border-light p-5 align-items-center col col-md-6 offset-md-3" action="/Usuario/Registro" method="post">

    <p class="h4 mb-4">Registro</p>

	<div class="form-group">
		@Html.Label("Email", "E-mail:")
		@Html.EditorFor(p => p.Email, null, new { @class = "form-control" })
		@Html.ValidationMessageFor(p => p.Email, null, new { @class = "text-danger" })
	</div>

	<div class="form-group">
		@Html.Label("Password", "Contraseña:")
		@Html.EditorFor(p => p.Password, null, new { @class = "form-control" })
		@Html.ValidationMessageFor(p => p.Password, null, new { @class = "text-danger" })

	</div>

	<div class="form-group">
		@Html.Label("PasswordConfirmar", "Repetir Contraseña:")
		@Html.EditorFor(p => p.PasswordConfirmar, null, new { @class = "form-control" })
		@Html.ValidationMessageFor(p => p.PasswordConfirmar, null, new { @class = "text-danger" })

	</div>

	<div class="form-group">
		<label for="exampleInputPassword1">Fecha de nacimiento</label>
		<input type="date" class="form-control" name="FechaNacimiento" placeholder="Fecha de nacimiento">
		@Html.ValidationMessageFor(p => p.FechaNacimiento, null, new { @class = "text-danger" })

	</div>

    <button class="btn btn-primary btn-block my-4" type="submit">Registrarse</button>

    <p>
        ¿Ya tienes una cuenta?
        <a href="/Usuario/Login">Iniciar Sesión</a>
    </p>

    @if (ViewData["MensajeErrorEmail"] != null)
    {
        <br />
        <div class="alert alert-danger centermsg" role="alert">
            @ViewData["MensajeErrorEmail"]
        </div>
    }

</form>
