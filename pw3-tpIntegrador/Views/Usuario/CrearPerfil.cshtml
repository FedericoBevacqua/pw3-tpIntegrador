
@{
    ViewBag.Title = "Crear perfil";
}

    <div class="container">
        <h2>Crear perfil</h2>

        <form action="/Usuario/CrearPerfil" method="post">
            <div class="form-group">
                @Html.Label("Nombre", "Nombre:")
                @Html.TextBox("Nombre", null, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.Label("Apellido", "Apellido:")
                @Html.TextBox("Apellido", null, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label>Foto de perfil:</label>
                <div class="form-row mt-2 mb-4">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="Imagen" name="Imagen" lang="es">
                        <label class="custom-file-label" for="Imagen">Seleccionar archivo</label>
                    </div>
                </div>
            </div>

            <input type="submit" class="btn btn-primary" name="name" value="Crear perfil" />
        </form>
    </div>



