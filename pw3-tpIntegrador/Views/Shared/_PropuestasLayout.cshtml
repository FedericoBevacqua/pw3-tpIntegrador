@model Data.Usuario
@{
    Layout = "~/Views/Shared/_BaseLayout.cshtml";
}

<nav class="navbar navbar-expand-lg navbar-dark bg-dark navbar-fixed-top">
    @Html.ActionLink("Ayudando al prójimo", "Inicio", "Home", new { area = "" }, new { @class = "navbar-brand" })
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    @{
        if (!Session["UserSession"].Equals(String.Empty))
        {

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        @Html.ActionLink("Home", "Inicio", "Home", new object { }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Crear propuestas", "Crear", "Propuestas", new object { }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Mi perfil", "MiPerfil", "Usuario", new object { }, new { @class = "nav-link" })
                    </li>

                    @{
                        // Muestro la opcion de Gestion de Denuncias solo si es Admin el usuario
                        if (((Data.Usuario)Session["UserSession"]).TipoUsuario == 1)
                        {
                            <li class="nav-item">
                                @Html.ActionLink("Denuncias", "Gestionar", "Denuncias", new object { }, new { @class = "nav-link" })
                            </li>
                        }
                    }

                    <li class="nav-item">
                        @Html.ActionLink("Acerca de", "Ver", "AcercaDe", new object { }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Salir", "LogOut", "Usuario", new object { }, new { @class = "nav-link" })
                    </li>


                </ul>
            </div>
        }
    }
</nav>

@RenderBody()
